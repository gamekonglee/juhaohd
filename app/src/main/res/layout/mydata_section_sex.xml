<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_white_full_10"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">
    <TextView
        android:text="修改性别"
        android:textSize="36sp"
        android:textColor="#444444"
        android:layout_margin="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/rg_sex"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/tv_man"
                android:text="男"
                android:textSize="72sp"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:background="@drawable/selector_sex"
                android:textColor="@color/text_selector_sex"
                android:layout_width="240dp"
                android:layout_height="240dp" />
            <RadioButton
                android:id="@+id/tv_women"
                android:text="女"
                android:button="@null"
                android:textSize="72sp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/selector_women"
                android:textColor="@color/text_selector_sex"
                android:layout_width="240dp"
                android:layout_height="240dp" />
        </RadioGroup>
    <Button
        android:id="@+id/btn_save_sex"
        android:layout_marginTop="30dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:background="@color/orange_theme"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</LinearLayout>