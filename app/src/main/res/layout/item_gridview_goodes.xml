<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/bg_corner_trans"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="360dp"
    android:layout_height="300dp">
    <ImageView
        android:id="@+id/iv_photo"
        android:src="@drawable/bg_default"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_is_new"
        android:text="新"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@mipmap/icon_left_corner"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_is_hot"
        android:text="热"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@mipmap/icon_left_corner"
        android:layout_width="80dp"
        android:layout_height="80dp" />
</RelativeLayout>
    <LinearLayout
        android:background="@drawable/bg_corner_eeeeee_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="24dp"
        android:textSize="30sp"
        android:textColor="#444444"
        android:text="000-00"
        android:lines="2"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="¥"
        android:textSize="24sp"
        android:textColor="@color/orange_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:text="00.00"
            android:textColor="@color/orange_theme"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="#333333"
            android:textSize="24sp"
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
<ImageView
android:id="@+id/check_iv"
android:layout_width="50dp"
android:layout_height="50dp"
android:layout_alignParentRight="true"
android:layout_alignParentBottom="true"
android:scaleType="fitXY"
    android:visibility="gone"
android:src="@drawable/icon_design_product_select"/>
</RelativeLayout>