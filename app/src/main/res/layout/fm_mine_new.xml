<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_marginTop="120dp"
       android:layout_width="wrap_content"
       android:gravity="center_vertical"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:text="个人中心"
           android:textColor="#ffffff"
           android:textSize="64sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <View
           android:layout_marginLeft="10dp"
           android:layout_width="1dp"
           android:layout_height="20dp"/>
       <TextView
           android:id="@+id/tv_setting_new"
           android:text="设置"
           android:textSize="18sp"
           android:layout_marginLeft="10dp"
           android:textColor="@color/green"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:layout_marginRight="180dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_cv"
            android:src="@mipmap/icon_head"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nickname_tv"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:lines="1"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/level_tv"
                android:text=""
                android:textColor="#ffffff"
                android:layout_marginTop="6dp"
                android:textSize="36sp"
                android:lines="1"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_change"
            android:layout_marginLeft="30dp"
            android:text="修改"
            android:textSize="36sp"
            android:textColor="@color/orange_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/payment_rl"
            android:layout_marginLeft="150dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/ordert_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="待付款"
                android:textColor="#fff"
                android:textSize="36sp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="9dp"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="200dp"
                android:layout_height="68dp" />
            <TextView
                android:id="@+id/unMessageReadTv"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="42dp"
                android:lines="1"
                android:layout_height="42dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/delivery_rl"
            android:layout_marginLeft="60dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
            <TextView

                android:text="待发货"
                android:textColor="#fff"
                android:textSize="36sp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="9dp"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="200dp"
                android:layout_height="68dp"/>
            <TextView
                android:id="@+id/unMessageRead02Tv"
                android:visibility="gone"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:lines="1"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="42dp"
                android:layout_height="42dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Receiving_rl"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
            <TextView
                android:text="待收货"
                android:textColor="#fff"
                android:textSize="36sp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="9dp"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="200dp"
                android:layout_height="68dp"/>
            <TextView
                android:id="@+id/unMessageRead03Tv"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:lines="1"
                android:textSize="24sp"
                android:layout_width="42dp"
                android:layout_height="42dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/order_rl"
                android:text="我的订单"
                android:textSize="48sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="300dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_02"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/address_rl"
            android:text="收货地址"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_03"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/stream_rl"
            android:text="我的物流"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_04"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/collect_rl"
            android:text="我的收藏"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_05"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/tv_setting"
            android:text="我的产品"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>