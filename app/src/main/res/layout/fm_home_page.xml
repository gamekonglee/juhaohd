<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.lib.common.hxp.view.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head"/>
        <!-- 支持所有实现Pullable接口的View -->

        <com.lib.common.hxp.view.PullableScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/convenientBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6"
                    android:visibility="visible"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        android:src="@mipmap/icon_classification"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F6F6F6"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:paddingLeft="90dp"
                            android:paddingRight="90dp"
                            >

                            <LinearLayout
                                android:id="@+id/bt01_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt01"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 现代简约 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt02_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt02"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 温馨宜家 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt03_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt03"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 浪漫田园 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt04_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt04"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 典雅中式 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt05_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt05"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 小资美式 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt06_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt06"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 奢华欧式 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt07_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt07"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 后现代 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bt08_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/bt08"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="[ 新中式 ]"
                                    android:textColor="@color/txt_black"
                                    android:textSize="22sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#F6F6F6"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/zone01_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/zone01"/>

                        <ImageView
                            android:id="@+id/zone02_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/zone02"/>

                        <ImageView
                            android:id="@+id/zone03_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/zone03"/>

                        <ImageView
                            android:id="@+id/zone04_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/zone04"
                            />

                        <ImageView
                            android:id="@+id/zone05_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/zone05"/>

                        <ImageView
                            android:id="@+id/zone06_iv"
                            android:layout_width="250dp"
                            android:layout_height="70dp"
                            android:src="@mipmap/zone06"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="770dp"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/tiyan_iv"
                                android:layout_width="400dp"
                                android:layout_height="770dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/tiyan"
                                />

                            <ImageView
                                android:id="@+id/pinpaitehui_iv"
                                android:layout_width="600dp"
                                android:layout_height="250dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/tiyan_iv"
                                android:scaleType="fitXY"
                                android:src="@mipmap/pinpaitehui"
                                />

                            <ImageView
                                android:id="@+id/shangxin_iv"
                                android:layout_width="380dp"
                                android:layout_height="250dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/pinpaitehui_iv"
                                android:scaleType="fitXY"
                                android:src="@mipmap/shangxin"
                                />

                            <ImageView
                                android:id="@+id/maishoutuijian_iv"
                                android:layout_width="380dp"
                                android:layout_height="250dp"
                                android:layout_below="@id/pinpaitehui_iv"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@id/tiyan_iv"
                                android:scaleType="fitXY"
                                android:src="@mipmap/maishoutuijian"
                                />

                            <ImageView
                                android:id="@+id/pinpaixingxian_iv"
                                android:layout_width="380dp"
                                android:layout_height="250dp"
                                android:layout_below="@id/maishoutuijian_iv"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@id/tiyan_iv"
                                android:scaleType="fitXY"
                                android:src="@mipmap/pinpaixingxian"
                                />

                            <ImageView
                                android:id="@+id/rexiaotop_iv"
                                android:layout_width="600dp"
                                android:layout_height="600dp"
                                android:layout_below="@id/pinpaitehui_iv"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@id/maishoutuijian_iv"
                                android:scaleType="fitXY"
                                android:src="@mipmap/rexiaotop"
                                />
                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/remaituijian"/>

                <com.lib.common.hxp.view.GridViewForScrollView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#FFFFFF"
                    android:horizontalSpacing="5dp"
                    android:numColumns="4"
                    android:paddingLeft="90dp"
                    android:paddingRight="90dp"
                    android:paddingTop="15dp"
                    android:verticalSpacing="15dp"/>

            </LinearLayout>

        </com.lib.common.hxp.view.PullableScrollView>

        <include layout="@layout/load_more"/>

    </com.lib.common.hxp.view.PullToRefreshLayout>


</LinearLayout>