<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner_white_full_10">
    <RelativeLayout
        android:id="@+id/logistics_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/consignee_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consignee"
            android:textSize="25dp"
            android:visibility="gone"
            android:textColor="@color/fontColor2"
            android:layout_toRightOf="@id/coordinate_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/consignee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小五"
            android:textSize="36sp"
            android:textColor="#444444"
            android:layout_toRightOf="@id/consignee_title_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="131358745454"
            android:textSize="36sp"
            android:textColor="#444444"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省佛山市禅城区"
            android:textSize="36sp"
            android:textColor="#444444"
            android:layout_toRightOf="@id/address_title_tv"
            android:layout_below="@id/consignee_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="3dp"
        style="@style/view_style"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <bc.juhaohd.com.ui.view.TextViewPlus
            android:drawableLeft="@mipmap/cb_normal_cart"
            android:id="@+id/default_addr_tv"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            app:left_width="60dp"
            app:left_height="60dp"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaults_address"
            android:textSize="36sp"
            android:textColor="@color/orange_theme"
            />
        <bc.juhaohd.com.ui.view.TextViewPlus
            app:left_width="60dp"
            app:left_height="60dp"
            android:drawableLeft="@mipmap/icon_my_edit"
            android:id="@+id/edit_tv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="36sp"
            android:layout_marginRight="300dp"
            android:gravity="center"
            android:textColor="#444444"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            />
        <bc.juhaohd.com.ui.view.TextViewPlus
            app:left_width="60dp"
            app:left_height="60dp"
            android:drawableLeft="@mipmap/icon_delete_cart"
            android:id="@+id/delete_tv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_marginRight="60dp"
            android:textSize="36sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>