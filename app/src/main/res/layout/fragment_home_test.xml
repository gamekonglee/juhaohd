<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_juhao"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/tv_juhao"
                android:text="钜豪超市"
                android:layout_width="300dp"
                android:layout_height="300dp"
                style="@style/tv_home_text"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_solution"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/tv_solution"
            android:text="方案库"
            android:layout_width="300dp"
            android:layout_height="300dp"
            style="@style/tv_home_text"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_buytime"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/tv_buytime"
            android:text="限时购"
            android:layout_width="300dp"
            android:layout_height="300dp"
            style="@style/tv_home_text" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_suiyipei"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/tv_match"
            android:text="随意配"
            android:layout_width="300dp"
            android:layout_height="300dp"
            style="@style/tv_home_text" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_360"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/tv_360"
                android:text="360展厅"
                android:layout_width="300dp"
                android:layout_height="300dp"
                style="@style/tv_home_text" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_taocan"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/tv_taocan"
                android:text="套餐秒杀"
                android:layout_width="300dp"
                android:layout_height="300dp"
                style="@style/tv_home_text" />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/tv_cart"
                android:text="购物车"
                android:layout_width="300dp"
                android:layout_height="300dp"
                style="@style/tv_home_text" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="300dp"
                android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_audio"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/tv_audio"
                android:text="视频"
                android:layout_width="300dp"
                android:layout_height="300dp"
                style="@style/tv_home_text"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="620dp"
            android:layout_height="300dp" >
        <ImageView
            android:id="@+id/iv_code_qr"
            android:layout_width="620dp"
            android:layout_height="300dp" />
            <ImageView
                android:id="@+id/iv_code"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:src="@drawable/icon_two_code"
                android:layout_width="180dp"
                android:layout_height="180dp" />
            <TextView
                android:id="@+id/tv01"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码安装钜豪APP"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/tv_code"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv01"
                android:layout_toRightOf="@+id/iv_code"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>
    </LinearLayout>