<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    tools:context="bc.juhaohd.com.ui.activity.SearchActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:src="@mipmap/icon_left_arrow"
        android:layout_width="44dp"
        android:layout_margin="80dp"
        android:layout_height="80dp" />
    <ImageView
        android:id="@+id/iv_logo"
        android:src="@mipmap/logo_juhao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_width="290dp"
        android:layout_height="130dp" />
    <LinearLayout
        android:layout_marginLeft="460dp"
        android:layout_below="@+id/iv_logo"
        android:layout_width="1000dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="820dp"
            android:background="@drawable/bg_corner_left_white"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/icon_search"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_search"
                android:hint="搜索关键词"
                android:textColorHint="#aaaaaa"
                android:textSize="36sp"
                android:background="@null"
                android:layout_marginRight="30dp"
                android:layout_width="0dp"
                android:paddingLeft="30dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
            <TextView
                android:id="@+id/tv_search"
                android:text="搜索"
                android:textSize="36sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/bg_corner_right_orange"
                android:layout_width="180dp"
                android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
