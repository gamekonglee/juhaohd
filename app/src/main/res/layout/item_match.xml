<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/match_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="22dip"
            android:textStyle="bold"
            android:textColor="@color/fontColor2"
            android:gravity="center_vertical"
            android:text="方案"/>
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ico_close"/>
        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_share"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/close_iv"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/match_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_default"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/trantracent_wode"
            android:layout_alignParentBottom="true"
            android:text="@string/edit_click"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingTop="5dp">
        <bc.juhao.com.ui.view.HorizontalListView
            android:id="@+id/horizon_listview"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/white"
            />
        <View
            android:layout_marginTop="10dp"
            style="@style/view_style"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/match_name02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="@color/fontColor6"
                android:text="小美式风格/餐厅"/>
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="@color/fontColor6"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="2017-02-17"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>